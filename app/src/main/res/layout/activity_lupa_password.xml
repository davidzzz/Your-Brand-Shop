<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lupa_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guritadigital.shop.LupaPasswordActivity"
    android:background="@drawable/background_login">

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:alpha="0.7"
        android:background="@android:color/black" >
    </View>
    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="20dp" >

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_top_bg"
            android:hint="Masukan Email..."
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/textColorPrimaryBlack"
            android:textColorHint="@color/main_color_grey_500"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/kode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_top_bg"
            android:hint="Masukan Kode..."
            android:inputType="number"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/textColorPrimaryBlack"
            android:textColorHint="@color/main_color_grey_500"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_top_bg"
            android:hint="Masukan Kata Sandi..."
            android:inputType="textPassword"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/textColorPrimaryBlack"
            android:textColorHint="@color/main_color_grey_500"
            android:textCursorDrawable="@null" />

        <com.guritadigital.shop.view.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_background_empty" >

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_gmail"
                android:text="Send"
                android:textColor="#fff"
                android:textStyle="bold" />
        </com.guritadigital.shop.view.MaterialRippleLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_margin="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="@drawable/button_bg_fb"
                android:text="LOGIN"
                android:textColor="#FFF"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guritadigital.shop.TabActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/layout_poin">

        <TextView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="1dp"

            android:layout_marginLeft="4dp"
            android:background="@drawable/coins" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:text="My Points"
                android:textAlignment="inherit"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/poin"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="8dp"
                android:textAlignment="inherit"
                android:textSize="13sp" />

        </LinearLayout>



        <Button
            android:id="@+id/spin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.53"
            android:background="@drawable/add_selector"
            android:text="JACKPOT" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:tabPaddingStart="-1dp"
        app:tabPaddingEnd="-1dp"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorColor="@color/windowBackground"
        android:background="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
     </android.support.v4.view.ViewPager>

</LinearLayout>
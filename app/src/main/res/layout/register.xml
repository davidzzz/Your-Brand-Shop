<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login" >

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="@android:color/black" >
    </View>

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:padding="20dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp" />

        <com.guritadigital.shop.view.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_background_empty" >

            <Button
                android:id="@+id/btnGogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_gmail"
                android:text="Register with Google"
                android:textColor="#fff"
                android:textStyle="bold" />
        </com.guritadigital.shop.view.MaterialRippleLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:id="@+id/divider_top"
                android:layout_width="115dp"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/main_color_grey_300" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="2.5"
                android:gravity="center"
                android:text="Or"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider2"
                android:layout_width="115dp"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/main_color_grey_300" />
        </LinearLayout>

        <EditText
            android:id="@+id/Nama"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_top_bg"
            android:hint="Masukan Nama Kamu..."
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/textColorPrimaryBlack"
            android:textColorHint="@color/main_color_grey_500"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/UserName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_top_bg"
            android:hint="Masukan Email..."
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/textColorPrimaryBlack"
            android:textColorHint="@color/main_color_grey_500"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_top_bg"
            android:hint="Masukan Kata Sandi..."
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/textColorPrimaryBlack"
            android:textColorHint="@color/main_color_grey_500"
            android:textCursorDrawable="@null" />


        <EditText
            android:id="@+id/Telp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_top_bg"
            android:hint="Masukan No Telp..."
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/textColorPrimaryBlack"
            android:textColorHint="@color/main_color_grey_500"
            android:textCursorDrawable="@null" />

        <com.guritadigital.shop.view.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_background_empty" >

            <Button
                android:id="@+id/btnRegis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_rounded_corners"
                android:text="Register"
                android:textColor="#fff"
                android:textStyle="bold" />
        </com.guritadigital.shop.view.MaterialRippleLayout>


        <Button
            android:id="@+id/txtToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:layout_weight="2.5"
            android:background="@drawable/button_bg_fb"
            android:text="LOGIN"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>